<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MapActivity">

    <include android:id="@+id/tool_bar" layout="@layout/actionbar"/>

    <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/map"
                android:layout_width="386.897dp"
                android:layout_height="547.3dp"
                app:srcCompat="@drawable/map3"
                android:contentDescription="@null"
                android:scaleType="fitStart"
                tools:ignore="MissingPrefix"
                tools:src="@drawable/map3"
                android:layout_gravity="top|left"/>

        <ImageView
                android:id="@+id/marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/animated_marker"
                android:contentDescription="@null"
                android:scaleType="center"
                tools:ignore="MissingPrefix"
                tools:src="@drawable/animated_marker"
                android:visibility="invisible"
                android:gravity="left|top"
        />

        <ImageView
                android:id="@+id/sat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="left|top"
                android:visibility="invisible"

                android:src="@drawable/ic_sat_128"

        />

        <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOC:"
                android:layout_gravity="top|right"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="触达会议室"
                android:layout_gravity="bottom|right"/>
    </FrameLayout>
</RelativeLayout>